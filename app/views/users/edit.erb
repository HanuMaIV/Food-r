<div class="container">
  <h2>Edit <%= current_user.name %>'s Settings</h2>
  <form action="/users/<%=current_user.id%>/edit" method="post">
    <h3>Update Your Information Here<h3> <br>
    <input type="hidden" name="_method" value="put">
    <input type="string" name="name" value="<%=current_user.name%>"> <br>
    <input type="text" name="email" value="<%=current_user.email%>"> <br>
    <input type="string" name="password" value=""><br>
    <input type="submit" value="Update User Info">
  </form>
</div>
