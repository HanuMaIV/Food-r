<div class="container">
<form action="/events/select_restaurants/<%= event.id %>?city=<%=local_area[:city]%>&state=<%=local_area[:state]%>&zip_code=<%=local_area[:zip_code]%>" method="post">
  <% local_restaurants.each do |restaurant| %>
    <img src="<%= restaurant.image_url if restaurant.respond_to?(:image_url)%>"/>
    <input type="checkbox" name="yelp_phone[<%=restaurant.name%>]" value="<%= restaurant.phone if restaurant.respond_to?(:phone) %>">
    <%= restaurant.name %><br><br>
  <% end %>
  <input type="submit" value="Submit">
</form>
</div>
