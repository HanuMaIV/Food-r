<div class="container">

	<div class="row">
		<div class="col-md-6" >
			<h2>List of events</h2>
		</div>
		<div class="col-md-4" >
			<form action="/events" method="get" class="form-inline divtop" >
				<div class="form-group">
					<input type="text" name="search" placeholder="Event title" class="form-control" />
				</div>
				<div class="form-group">
					<input type="submit" value="search"  class="form-control" />
				</div>
			</form>
		</div>
	</div>
	<hr>
	<div class='col-md-3'>
	</div>

	<div class='col-md-6'>
		<div class="list-group">
			<% events.each do |event| %>
				<a class="list-group-item text-center" href="/event/<%= event.id %>" ><%= event.title %></a>
			<% end %>
		</div>
	</div>
	<div class='col-md-3'>
	</div>
</div>
