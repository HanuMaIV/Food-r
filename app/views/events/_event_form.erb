
<form class="form_control" action="<%= action %>" method="post">
	<% if defined?(event) %>
		<input type="hidden" name="_method" value="put" />
	<% end %>
	<input type="text" name="event[title]" placeholder="Title" value="<%= event.title if defined?(event) %>" />
	<input type="text" name="event[description]" placeholder="Description" value="<%= event.description if defined?(event) %>" />
	<input type="text" class="datePicker" name="event_date" placeholder="Date of Event" value="<%= event.event_on.strftime("%m/%d/%Y") if defined?(event) %>" />
	<input type="text" class="timePicker" name="event_time" placeholder="Hour of Event" value="<%= event.event_on.strftime("%H:%M") if defined?(event) %>" />
	<input type="text" name="event[penalty]" placeholder="Penalty" value="<%= event.penalty if defined?(event) %>" />
	<input type="text" name="city" placeholder="City">
	<input type="text" name="state" placeholder="State">
	<input type="text" name="zip_code" placeholder="Zip Code">

	<select name="event[group_id]">
		<% groups.each do |group| %>
			<% selected = '' %>
			<% if (defined?(event) && (group.id == event.group.id)) %>
				<% selected = 'selected' %>
			<% end %>
			<option value="<%= group.id %>" <%= selected %> ><%= group.name %></option>
		<% end %>
	</select>

	<input type="submit" value="<%= submit_label %>" />
</form>

 <script>
  $(function() {
    // $( "#event_on" ).datepicker({ minDate: 0, maxDate: "+7D" });
    $( ".datePicker" ).datepicker({ minDate: 0});
    $('.timePicker').ptTimeSelect();
  });
  </script>